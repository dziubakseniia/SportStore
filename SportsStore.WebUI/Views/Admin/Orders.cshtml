@using System.Collections
@using System.Web.Mvc.Html
@model System.Collections.Generic.IEnumerable<SportsStore.Domain.Entities.Order>
@{
    ViewBag.Title = "Admin: All Orders";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3>All Orders</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped table-sm table-bordered">
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Info</th>
                <th class="">Status</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        @item.OrderId
                    </td>
                    <td class="text-center">
                        @item.Info
                    </td>
                    @using (Html.BeginForm("ChangeStatus", "Admin"))
                    {
                        <td class="text-center">
                            @item.Status
                            @Html.DropDownList("status", null, new {@class = "form-control-sm"})
                        </td>

                        <td class="text-center">
                            @Html.Hidden("OrderId", item.OrderId)
                            <input type="submit" class="btn btn-sm" value="Save Status" />
                        </td>
                    }
                </tr>
            }
        </table>
    </div>
</div>
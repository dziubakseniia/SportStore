@model SportsStore.WebUI.Models.LoginViewModel

@{
    ViewBag.Title = "Admin: Log In";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3>Log In</h3>
    </div>
    <div class="card-body">
        <p class="lead">Please log in:</p>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl"/>
            <div class="form-group row">
                <label class="col-sm-1">User Name:</label>
                <p class="col-sm-4">@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })</p>
                <p>@Html.ValidationMessageFor(x => x.Name)</p>
            </div>
            <div class="form-group row">
                <label class="col-sm-1">Password:</label>
                <p class="col-sm-4">@Html.PasswordFor(x => x.Password, new { @class = "form-control" })</p>
                <p>@Html.ValidationMessageFor(x => x.Password)</p>
            </div>
            <input type="submit" value="Log In" class="btn btn-primary" />
        }
    </div>
</div>
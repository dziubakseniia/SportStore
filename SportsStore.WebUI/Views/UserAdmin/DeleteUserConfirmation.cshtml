@model SportsStore.Domain.Entities.User

@{
    ViewBag.Title = "Delete User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("DeleteUser", "UserAdmin", new { id = Model.Id }))
{
    <div class="card">
        <div class="card-header"><h5 class="modal-title">Delete User.</h5></div>
        <div class="card-body">
            <p>Are you sure to delete @Model.UserName?</p>
            <input type="submit" value="Yes" class="btn btn-sm btn-primary"/>
            @Html.ActionLink("Close", "Users", new { id = Model.Id }, new { @class = "btn btn-secondary btn-sm" })
        </div>
    </div>
}
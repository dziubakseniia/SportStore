@model SportsStore.Domain.Entities.User

@{
    ViewBag.Title = "Admin: Edit User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3>Edit User</h3>
    </div>
    <div class="card-body">
        <div class="form-group">
            <label class="lead">Name</label>
            <p class="form-control-plaintext">@Model.Id</p>
        </div>
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(u => u.Id)
            <div class="form-group">
                <label class="lead">Email</label>
                @Html.TextBoxFor(u => u.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="lead">Password</label>
                <input type="password" name="password" class="form-control"/>
            </div>
            <input type="submit" class="btn btn-primary" value="Save" />
            @Html.ActionLink("Cancel", "Users", null, new { @class = "btn" })
        }
    </div>
</div>
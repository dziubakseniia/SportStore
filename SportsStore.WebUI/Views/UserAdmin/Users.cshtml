@model System.Linq.IQueryable<SportsStore.Domain.Entities.User>

@{
    ViewBag.Title = "Admin: All Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3>User Accounts</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Status
                </th>
                <th>
                    Actions
                </th>
            </tr>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="4" class="text-center">
                        No User Accounts
                    </td>
                </tr>
            }
            else
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>
                            @user.Id
                        </td>
                        <td>
                            @user.UserName
                        </td>
                        <td>
                            @user.Email
                        </td>
                        <td>
                            @user.Status.ToString()
                        </td>
                        <td>
                            @using (Html.BeginForm("DeleteUser", "UserAdmin", new {id = user.Id}))
                            {
                                @Html.ActionLink("Change Status", "ChangeStatus", new {id = user.Id}, new {@class = "btn btn-success btn-sm mr-1 mb-1"})
                                @Html.ActionLink("Edit", "EditUser", new {id = user.Id}, new {@class = "btn btn-primary btn-sm mb-1"})
                                <input type="submit" value="Delete" class="btn btn-danger btn-sm"/>
                            }
                        </td>
                    </tr>
                }
            }
        </table></div>
</div>
<div class="card-footer text-center">@Html.ActionLink("Create", "CreateUser", null, new { @class = "btn btn-primary" })</div>
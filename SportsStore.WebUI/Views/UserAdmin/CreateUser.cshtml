@model SportsStore.WebUI.Models.UserViewModel

@{
    ViewBag.Title = "Create User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3>Create User</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            <div class="form-group row">
                <label class="col-sm-2">Name:</label>
                <p class="col-sm-4">@Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })</p>
                <p>@Html.ValidationMessageFor(x => x.UserName)</p>
            </div>
            <div class="form-group row">
                <label class="col-sm-2">Email:</label>
                <p class="col-sm-4">@Html.TextBoxFor(x => x.Email, new { @class = "form-control" })</p>
                <p>@Html.ValidationMessageFor(x => x.Email)</p>
            </div>
            <div class="form-group row">
                <label class="col-sm-2">Password:</label>
                <p class="col-sm-4">@Html.PasswordFor(x => x.Password, new { @class = "form-control" })</p>
                <p>@Html.ValidationMessageFor(x => x.Password)</p>
            </div>
            <div class="form-group row">
                <label class="col-sm-2">Confirm Password:</label>
                <p class="col-sm-4">@Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })</p>
                <p>@Html.ValidationMessageFor(x => x.ConfirmPassword)</p>
            </div>
            <input type="submit" class="btn btn-primary" value="Create" />
            @Html.ActionLink("Cancel", "Users", null, new { @class = "btn btn-secondary" })
        }
    </div>
</div>